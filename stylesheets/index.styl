// variables
$primary-colour = #232323
$max-width = 800px

// device media queries
tablet = "(min-width: 768px) and (max-width: 979px)"
phone = "(max-width: 767px)"

@import 'reset'
@import 'misc'
@import 'grid'
@import 'views/view'
@import 'views/composite'
@import 'views/navbar'
@import 'views/composite'

// base view mixins
navbar-view()
view()
composite-view()

body
  overflow: hidden
  row()
  margin: 0 auto
  background: $primary-colour
  font-size: 100%
  text-align: center

.app-view
  padding-top: 44px
  @media phone
    padding-top: 0px

.view
  max-width: 100%
  padding: 10px
  padding-top: 44px

nav
  // max-width: $max-width
#arena
  width: 768px
  height: 768px
  position: relative
  background: #232425
  margin: 0 auto
  
.ball
  border-radius: 50%
  position: absolute
  border: 3px solid rgba(0,0,0,0.3)
  z-index: 1000
  width: 30px
  height: 30px

#platform
  margin: 0 auto
  background: #111
  position: absolute
  border-radius: 50%
  border: 2px solid #333;

.king
  border-color: gold

.nextKing
  border-color: silver

#rainbow
  width: 100%
  bottom: 0
  position: absolute
  height: 44px
  background: linear-gradient(left, red, orange, yellow, green, blue, indigo, purple, red)
  
